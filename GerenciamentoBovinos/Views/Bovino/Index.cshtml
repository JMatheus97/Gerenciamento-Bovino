@model IEnumerable<GerenciamentoBovinos.Models.Bovino>

@{
    ViewBag.Title = "Lista de Bovinos";
}

<h2 class="text-center">Lista de Bovinos</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-secondary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brinco)
        </th>
        <th>
            @Html.Raw("Raça")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DtNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VlrUnitario)
        </th>
        <th>
            @Html.Raw("Ações")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brinco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raca.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlrUnitario)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Bovino", new { id = item.Brinco})">
                    <i class="fa fa-pencil-square-o fa-2x"></i>
                </a>
                <a href="@Url.Action("Delete", "Bovino", new { id = item.Brinco})" class="ml-2" style="color: red">
                    <i class="fa fa-trash-o fa-2x"></i>
                </a>
            </td>
        </tr>
    }

</table>
